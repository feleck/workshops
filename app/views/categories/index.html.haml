%h1 Listing categories

%table.table
  %tr
    %th Name
    %th
    %th
    %th

  - categories.each do |category|
    %tr
      %td= link_to category.name, category
      - if user_signed_in? && current_user.admin?
        %td= link_to 'Edit', edit_category_path(category)
        %td= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }
%br
= link_to 'New Category', new_category_path if user_signed_in? && current_user.admin?
