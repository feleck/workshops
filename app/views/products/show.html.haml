.panel.panel-default.col-md-8
  .panel-heading
    %h4 
      = product.title
  .panel.body
    %p
      %b Description:
      = product.description
    %p
      %b Price:
      = product.price
    %p
      %b Category:
      = product.category.name
    - if product.average_rating
      %p
        %b Average rating:
        = product.average_rating
    
    = link_to 'Edit', edit_category_product_path(product.category.id, product.id), 
      class: 'btn btn-primary' if current_user == product.user

= render 'reviews/form' if user_signed_in?

.col-md-8
  = render reviews

.col-md-8
  = link_to 'Back', category_path(product.category), class: 'btn btn-primary'
