.panel.panel-default.col-md-6
  .panel-heading
    %h4 Product
  .panel.body
    = form_for [category, product] do |f|
      - if product.errors.any?
        #error_explanation
        .alert.alert-danger
          %h4= "#{pluralize(product.errors.count, "error")} prohibited this product from being saved:"
          %ul
            - product.errors.full_messages.each do |msg|
              %li= msg

      .form-group
        = f.label :title
        = f.text_field :title, class: 'form-control', required: true, autofocus: true, placeholder: "Enter title"
      .form-group
        = f.label :description
        = f.text_area :description, class: 'form-control', required: true, placeholder: "Enter description"
      .form-group
        = f.label :price
        = f.text_field :price, class: 'form-control', required: true, placeholder: "Enter price"

      = f.submit 'Save', class: 'btn btn-primary'
